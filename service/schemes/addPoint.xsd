<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
   <xs:element name="request">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="params">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="auth_token"/>

              <xs:choice>
                <xs:element type="xs:string" name="channel"/>
                <xs:element type="xs:integer" name="category_id"/>
              </xs:choice>

              <xs:element type="xs:string" name="title"/>
              <xs:element type="xs:string" name="description" minOccurs="0"/>
              <xs:element type="xs:string" name="link" minOccurs="0"/>
              <xs:element type="xs:double" name="latitude"/>
              <xs:element type="xs:double" name="longitude"/>
              <xs:element type="xs:double" name="altitude"/>
              <xs:element type="xs:string" name="time"/>

              <xs:element name="extended_data" minOccurs="0">
                <xs:complexType>
                  <xs:sequence>
                    <xs:any minOccurs="1" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
